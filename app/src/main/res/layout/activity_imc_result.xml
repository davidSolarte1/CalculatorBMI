<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstapp.ImcResult"
    android:background="#9FBBCC">

    <View
        android:id="@+id/vData"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="@id/vData"
        app:layout_constraintEnd_toEndOf="@id/vData"
        app:layout_constraintStart_toStartOf="@id/vData"
        app:layout_constraintTop_toTopOf="@id/vData"
        android:text="Datos"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="@id/vData"
        app:layout_constraintEnd_toEndOf="@id/vData"
        app:layout_constraintStart_toStartOf="@id/vData"
        app:layout_constraintTop_toBottomOf="@id/tvData"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="@id/vData"
        app:layout_constraintEnd_toEndOf="@id/vData"
        app:layout_constraintStart_toStartOf="@id/vData"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="@id/vData"
        app:layout_constraintEnd_toEndOf="@id/vData"
        app:layout_constraintStart_toStartOf="@id/vData"
        app:layout_constraintTop_toBottomOf="@id/tvWeight"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="@id/vData"
        app:layout_constraintEnd_toEndOf="@id/vData"
        app:layout_constraintStart_toStartOf="@id/vData"
        app:layout_constraintTop_toBottomOf="@id/tvHeight"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="@id/vData"
        app:layout_constraintEnd_toEndOf="@id/vData"
        app:layout_constraintStart_toStartOf="@id/vData"
        app:layout_constraintTop_toBottomOf="@id/tvSex"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp"/>
    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/vData"
        android:background="#000"
        />
    <View
        android:id="@+id/vState"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vLine"
        />


    <TextView
        android:id="@+id/tvIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/vState"
        android:text=""
        android:textColor="#000"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tvStateIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvIMC"
        android:text=""
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/tvRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStateIMC"
        android:textAlignment="center"
        android:text=""
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/tvOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRec"
        android:textAlignment="center"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOp"
        android:text="Volver a calcular"
        android:textStyle="bold"
        android:textSize="25dp"
        android:backgroundTint="#173F77"
        />

</androidx.constraintlayout.widget.ConstraintLayout>